<h2 class="mt-5 mb-5 text-center fw-bold">Sign up</h2>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group mt-5">
  <%= f.label :name,class: "fw-bold" %><br />
  <%= f.text_field :name, class: "form-control" %>
</div>
<br>
  <div class="field form-group">
    <%= f.label :email,class: "fw-bold" %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>
  <br>

  <div class="field">    
  <%= f.label :gender,class: "fw-bold" %><br>
  <span class="option fw-bold">Male <span><%= f.radio_button :gender, "m" %>
  <span class="option fw-bold">Female <span><%= f.radio_button :gender, "f" %></br>
</div>
<br>
  <div class="field form-group">
  <%= f.label :dob,class: "fw-bold" %><br />
  <%= f.date_field :dob, class: "form-control", autofocus: true %>
</div>
<br>
  <div class="field form-group">
    <%= f.label :password,class: "fw-bold" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>
  <br>
  <div class="field form-group">
    <%= f.label :password_confirmation,class: "fw-bold" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-secondary fw-bold", data: {turbo: false} %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
