<h2 class= "mt-5 mb-3 text-center fw-bold">Log in</h2>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group mt-5">
    <%= f.label :email,class: "fw-bold" %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>
<br>
  <div class="field form-group">
    <%= f.label :password, class: "fw-bold" %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>
<br>
  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "fw-bold" %>
    </div>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-secondary fw-bold", data: {turbo: false} %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>
